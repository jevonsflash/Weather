<UserControl
    x:Class="Weather.MyUserControl.JMessboxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Weather.MyUserControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">

        <Grid x:Name="SPFrame" Height="80" Width="200"  Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TBMessage" Text="{Binding MessageText,Mode=OneWay}" TextWrapping="Wrap" FontSize="24"  TextAlignment="Center" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
